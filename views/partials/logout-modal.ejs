<style>
      /* Logout Modal */
    .modal-overlay {
      display: none;
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: rgba(0, 0, 0, 0.5);
      z-index: 9999;
      align-items: center;
      justify-content: center;
    }

    .modal-overlay.show {
      display: flex;
    }

    .modal-content-custom {
      background: white;
      border-radius: 16px;
      padding: 35px;
      max-width: 420px;
      width: 90%;
      text-align: center;
      animation: slideUp 0.3s ease;
    }

    @keyframes slideUp {
      from {
        opacity: 0;
        transform: translateY(30px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .modal-icon {
      width: 70px;
      height: 70px;
      border-radius: 50%;
      background: #fee;
      color: #e53e3e;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 32px;
      margin: 0 auto 22px;
    }

    .modal-content-custom h3 {
      font-size: 22px;
      font-weight: 700;
      color: #2d3748;
      margin-bottom: 12px;
    }

    .modal-content-custom p {
      color: #718096;
      font-size: 15px;
      margin-bottom: 28px;
    }

    .modal-buttons {
      display: flex;
      gap: 14px;
      justify-content: center;
    }

    .modal-btn {
      padding: 12px 32px;
      border-radius: 10px;
      border: none;
      font-weight: 600;
      font-size: 15px;
      cursor: pointer;
      transition: all 0.3s;
    }

    .modal-btn.cancel {
      background: #e2e8f0;
      color: #4a5568;
    }

    .modal-btn.cancel:hover {
      background: #cbd5e0;
    }

    .modal-btn.confirm {
      background: #203f6a;
      color: white;
    }

    .modal-btn.confirm:hover {
      background: #1a3552;
      transform: translateY(-2px);
      box-shadow: 0 4px 12px rgba(32, 63, 106, 0.3);
    }

</style>

<div class="modal-overlay" id="logoutModal">
  <div class="modal-content-custom" style="max-width: 420px; padding: 35px; text-align: center;">
    <div style="width: 70px; height: 70px; border-radius: 50%; background: #fee; color: #e53e3e; display: flex; align-items: center; justify-content: center; font-size: 32px; margin: 0 auto 22px;">
      <i class="fas fa-sign-out-alt"></i>
    </div>
    <h3 style="font-size: 22px; font-weight: 700; color: #2d3748; margin-bottom: 12px;">Confirm Logout</h3>
    <p style="color: #718096; font-size: 15px; margin-bottom: 28px;">Are you sure you want to logout from the admin panel?</p>
    <div style="display: flex; gap: 14px; justify-content: center;">
      <button class="modal-btn cancel" onclick="closeLogoutModal()">Cancel</button>
      <button class="modal-btn confirm" onclick="confirmLogout()">Logout</button>
    </div>
  </div>
</div>