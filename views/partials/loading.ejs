<div id="globalLoader" class="loader-overlay">
  <div class="loader-content">
    <div class="hospital-loader">
      <i class="fas fa-heartbeat"></i>
    </div>
    <p class="loader-text">Please wait...</p>
  </div>
</div>

<style>
.loader-overlay {
  display: none;
  position: fixed;
  inset: 0;
  background: linear-gradient(135deg, #667eea, #203f6a);
  backdrop-filter: blur(15px);
  z-index: 999999;
  justify-content: center;
  align-items: center;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.loader-overlay.show {
  display: flex;
  opacity: 1;
}

.loader-content {
  text-align: center;
  animation: zoomIn 0.4s ease;
}

@keyframes zoomIn {
  from {
    opacity: 0;
    transform: scale(0.7);
  }
  to {
    opacity: 1;
    transform: scale(1);
  }
}

.hospital-loader {
  width: 100px;
  height: 100px;
  margin: 0 auto 25px;
  background: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 10px 40px rgba(0, 0, 0, 0.3);
  animation: pulse-icon 1.5s ease-in-out infinite;
}

.hospital-loader i {
  font-size: 50px;
  color: #667eea;
  animation: heartbeat 1.5s ease-in-out infinite;
}

@keyframes pulse-icon {
  0%, 100% {
    transform: scale(1);
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.3);
  }
  50% {
    transform: scale(1.05);
    box-shadow: 0 15px 50px rgba(102, 126, 234, 0.4);
  }
}

@keyframes heartbeat {
  0%, 100% {
    transform: scale(1);
  }
  25% {
    transform: scale(1.1);
  }
  50% {
    transform: scale(1);
  }
  75% {
    transform: scale(1.1);
  }
}

.loader-text {
  color: white;
  font-size: 20px;
  font-weight: 600;
  letter-spacing: 0.5px;
  text-shadow: 0 3px 15px rgba(0, 0, 0, 0.4);
}

@media (max-width: 768px) {
  .hospital-loader {
    width: 80px;
    height: 80px;
  }
  
  .hospital-loader i {
    font-size: 40px;
  }
  
  .loader-text {
    font-size: 16px;
  }
}
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const loader = document.getElementById('globalLoader');
    if (loader && loader.classList.contains('show')) {
      loader.classList.remove('show');
    }
  });

  window.addEventListener('beforeunload', () => {
    const loader = document.getElementById('globalLoader');
    if (loader) {
      loader.classList.remove('show');
    }
  });
</script>
