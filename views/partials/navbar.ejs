<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %> | Healora</title>
  <link href="/images/Logo-browser.jpg" rel="icon">
  <link href="https://fonts.googleapis.com/css2?family=Jost:wght@400;500;600;700&display=swap" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>

  <!-- Topbar Start -->
  <div class="container-fluid bg-light ps-5 pe-0 d-none d-lg-block">
    <div class="row gx-0">
      <div class="col-md-6 text-center text-lg-start mb-2 mb-lg-0">
        <div class="d-inline-flex align-items-center">
          <small class="py-2">
            <i class="far fa-clock text-primary me-2"></i>
            Opening Hours: Mon - Fri : 6.00 am - 10.00 pm, Sunday Closed
          </small>
        </div>
      </div>
      <div class="col-md-6 text-center text-lg-end">
        <div class="position-relative d-inline-flex align-items-center bg-primary text-white top-shape px-5">
          <div class="top-bar me-3 pe-3 border-end py-2 bg-primary">
            <p class="m-0"><i class="fa fa-envelope-open me-2"></i>healora777@gmail.com</p>
          </div>
          <div class="top-bar py-2 bg-primary">
            <p class="m-0"><i class="fa fa-phone-alt me-2"></i>(237) 881-812-255</p>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- Topbar End -->

  <!-- Navbar Start -->
  <nav class="navbar navbar-expand-lg bg-white navbar-light shadow-sm sticky-top p-0">
    <a href="/" class="navbar-brand d-flex align-items-center px-4 px-lg-5">
      <img src="/images/logo-1.jpg" alt="Healora Logo" height="70" class="m-0">
    </a>

    <button type="button" class="navbar-toggler me-4" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse justify-content-center" id="navbarCollapse">

      <!-- Main Navigation -->
      <ul class="navbar-nav">
        <li class="nav-item">
          <a href="/" class="nav-link">Home</a>
        </li>
        
        <li class="nav-item">
          <a href="/doctors" class="nav-link">Doctors</a>
        </li>

        <li class="nav-item">
          <a href="/departments" class="nav-link">Departments</a>
        </li>

        <li class="nav-item">
          <a href="/services" class="nav-link">Services</a>
        </li>

        <li class="nav-item">
          <a href="/about-us" class="nav-link">About Us</a>
        </li>

        <li class="nav-item">
          <a href="/contact" class="nav-link">Contact</a>
        </li>
      </ul>

      <!-- User Menu -->
      <ul class="navbar-nav ms-4">
        <% if (locals.user) { %>
          <!-- Logged In User -->
          <li class="nav-item dropdown user-dropdown">
            <a class="nav-link dropdown-toggle d-flex align-items-center" 
               href="#" 
               id="userDropdown" 
               role="button" 
               data-bs-toggle="dropdown" 
               aria-expanded="false">
              <div class="user-avatar me-2">
                <%= user.name.charAt(0).toUpperCase() %>
              </div>
              <div class="user-info d-none d-lg-block">
                <span class="user-name"><%= user.name %></span>
                <small class="user-role d-block"><%= user.role || 'Patient' %></small>
              </div>
            </a>

            <ul class="dropdown-menu dropdown-menu-end user-menu" aria-labelledby="userDropdown">
              <li class="dropdown-header">
                <strong><%= user.name %></strong>
                <small class="d-block text-muted"><%= user.email %></small>
              </li>
              <li><hr class="dropdown-divider"></li>
              
              <li>
                <a class="dropdown-item" href="/patient/dashboard">
                  <i class="fas fa-tachometer-alt me-2"></i>Dashboard
                </a>
              </li>
              <li>
                <a class="dropdown-item" href="/patient/profile">
                  <i class="fas fa-user me-2"></i>My Profile
                </a>
              </li>
              <li>
                <a class="dropdown-item" href="/patient/appointments">
                  <i class="fas fa-calendar-check me-2"></i>My Appointments
                </a>
              </li>
              <li>
                <a class="dropdown-item" href="/patient/medical-records">
                  <i class="fas fa-file-medical me-2"></i>Medical Records
                </a>
              </li>
              
              <li><hr class="dropdown-divider"></li>
              
              <li>
                <form action="/patient/logout" method="POST" style="margin: 0;">
                  <button type="submit" class="dropdown-item text-danger">
                    <i class="fas fa-sign-out-alt me-2"></i>Logout
                  </button>
                </form>
              </li>
            </ul>
          </li>

        <% } else { %>
          <!-- Not Logged In -->
          <li class="nav-item">
            <a href="/login" class="btn btn-primary rounded-pill px-4 py-2">
              Login
            </a>
          </li>
        <% } %>
      </ul>

    </div>
  </nav>
  <!-- Navbar End -->

  <style>
    /* Dropdown */
    .user-dropdown .dropdown-toggle {
      background: rgba(27, 54, 93, 0.05);
      border-radius: 50px;
      padding: 8px 16px;
      transition: all 0.3s ease;
    }

    .user-dropdown .dropdown-toggle:hover {
      background: rgba(27, 54, 93, 0.1);
    }

    .user-avatar {
      width: 36px;
      height: 36px;
      border-radius: 50%;
      background: linear-gradient(135deg, #00A3E0, #1B365D);
      color: white;
      display: flex;
      align-items: center;
      justify-content: center;
      font-weight: 700;
      font-size: 16px;
    }

    .user-info {
      line-height: 1.2;
    }

    .user-name {
      font-weight: 600;
      color: #1B365D;
      font-size: 14px;
    }

    .user-role {
      color: #64748b;
      font-size: 12px;
    }

    .user-menu {
      min-width: 250px;
      border: none;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
      border-radius: 12px;
      margin-top: 8px;
    }

    .user-menu .dropdown-header {
      padding: 12px 20px;
      background: #f8f9fa;
    }

    .user-menu .dropdown-item {
      padding: 10px 20px;
      transition: all 0.3s ease;
    }

    .user-menu .dropdown-item:hover {
      background: rgba(0, 163, 224, 0.1);
      padding-left: 25px;
    }

    .user-menu .dropdown-item i {
      width: 20px;
      text-align: center;
      color: #1B365D;
    }

    .user-menu .dropdown-item.text-danger:hover {
      background: rgba(220, 53, 69, 0.1);
    }

    /* Mobile adjustments */
    @media (max-width: 991px) {
      .user-dropdown .dropdown-toggle {
        padding: 8px;
      }
      
      .user-info {
        display: none !important;
      }
    }
  </style>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>