<style>
/* ===========================
   Search Bar Styling
=========================== */
.search-bar-section {
  position: relative;
  margin-top: -50px; /* Overlap the bottom of the carousel */
  z-index: 10;
}

.search-bar {
  max-width: 900px;
  margin: 0 auto;
  border-radius: 15px;
  background: #fff;
  height: 70px;
}

.department-btn {
  border: none;
  background: #fff;
  font-weight: 600;
  color: #555;
  border-right: 1px solid #e0e0e0;
  height: 70px;
  padding: 0 20px;
}

.search-input {
  border: none;
  flex: 1;
  padding: 0 1.2rem;
  font-size: 1rem;
  height: 70px;
}



.search-btn {
  background-color: var(--secondary);
  color: #fff;
  border: none;
  width: 70px;
  border-radius: 0px;
  height: 70px;
  font-size: 1.2rem;
}

.search-btn:hover {
  background-color: #3a3580;
}

@media (max-width: 768px) {
  .search-bar {
    flex-direction: flex;
    height: auto;
  }
  .department-btn,
  .search-input,
  .search-btn {
    width: 100%;
    height: 55px;
    border-radius: 10px;
  }
}

.dropdown-menu {
  z-index: 9999 !important;
}

</style>

    <!-- search-bar.ejs -->
<section class="search-bar-section mg-mb-0">
  <div class="container">
    <div class="search-bar shadow-lg d-flex align-items-center">
      <!-- Departments Dropdown -->
      <div class="dropdown">
        <button class="btn dropdown-toggle department-btn" type="button" id="departmentsDropdown"
          data-bs-toggle="dropdown" aria-expanded="false">
          DEPARTMENTS
        </button>
        <ul class="dropdown-menu" aria-labelledby="departmentsDropdown">
          <li><a class="dropdown-item" href="#">Cardiology</a></li>
          <li><a class="dropdown-item" href="#">Neurology</a></li>
          <li><a class="dropdown-item" href="#">Pediatrics</a></li>
          <li><a class="dropdown-item" href="#">Orthopedics</a></li>
        </ul>
      </div>

      <!-- Input Field -->
      <input type="text" class="form-control search-input" placeholder="FIND A DOCTOR">

      <!-- Search Button -->
      <button class="btn search-btn">
        <i class="bi bi-search"></i>
      </button>
    </div>
  </div>
</section>

<!-- Bootstrap Bundle with Popper (needed for dropdowns, modals, etc.) -->
