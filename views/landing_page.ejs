<script>
document.getElementById('doctor-search-form').addEventListener('submit', async (e) => {
  e.preventDefault();
  const dept = document.getElementById('department').value;
  const docName = document.getElementById('doctor-name').value;

  const response = await fetch(`/find-doctor?department=${dept}&doctorName=${docName}`);
  const doctors = await response.json();

  const resultDiv = document.getElementById('search-result');

  if (doctors.length > 0) {
    resultDiv.innerHTML = doctors.map(doc => `
      <div class="card p-3 mb-2">
        <strong>${doc.name}</strong> - <em>${doc.department}</em>
      </div>
    `).join('');
  } else {
    resultDiv.innerHTML = `<div class="alert alert-warning">No doctors found for your search.</div>`;
  }
});
</script>

