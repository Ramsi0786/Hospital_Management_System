<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Department Details - Healora</title>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/admin/dashboard.css">
  <link rel="stylesheet" href="/css/admin/profile.css">
</head>
<body>

  <%- include('../partials/loading') %>
  <%- include('../partials/admin-sidebar', { currentPage: 'departments' }) %>
  <%- include('../partials/admin-topbar', { admin: admin, breadcrumb: 'Department Details' }) %>

  <div class="main-content">
    <a href="/admin/departments" class="back-button">
      <i class="fas fa-arrow-left"></i>
      Back to Departments
    </a>

    <div id="departmentContent">
      <div class="empty-state">
        <i class="fas fa-spinner fa-spin fa-2x"></i>
        <p>Loading department...</p>
      </div>
    </div>
  </div>

  <!-- Edit Modal -->
  <div class="modal-overlay" id="editModal">
    <div class="modal-content-custom">
      <div class="modal-header">
        <h3>Edit Department</h3>
        <button class="btn-close-modal" onclick="closeEditModal()">
          <i class="fas fa-times"></i>
        </button>
      </div>
      <form id="editForm">
        <div class="modal-body">
          <input type="hidden" id="departmentId">

          <div class="form-group">
            <label>Department Name *</label>
            <input type="text" id="editName" required>
            <span class="error-message" id="errorEditName"></span>
          </div>

          <div class="form-group">
            <label>Description *</label>
            <textarea id="editDescription" rows="3" required></textarea>
            <span class="error-message" id="errorEditDescription"></span>
          </div>

          <div class="form-group">
            <label>Icon (FontAwesome class)</label>
            <input type="text" id="editIcon" placeholder="e.g., fa-heart">
            <small style="color: #64748b;">Visit <a href="https://fontawesome.com/icons" target="_blank">fontawesome.com/icons</a></small>
          </div>

          <div class="form-group">
            <label>Department Head</label>
            <select id="editDepartmentHead">
              <option value="">No Head Assigned</option>
            </select>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn-modal btn-cancel" onclick="closeEditModal()">Cancel</button>
          <button type="submit" class="btn-modal btn-submit">Save Changes</button>
        </div>
      </form>
    </div>
  </div>

  <%- include('../partials/logout-modal') %>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script src="/js/alerts.js"></script>
  <script src="/js/loader.js"></script>
  <%- include('../partials/admin-scripts') %>

  <script>
    const departmentId = window.location.pathname.split('/').pop();
    let currentDepartment = null;

    async function loadDepartment() {
      Loader.show('Loading department...');

      try {
        const response = await fetch(`/admin/api/departments/${departmentId}`);
        const data = await response.json();
        Loader.hide();

        if (data.success) {
          currentDepartment = data.department;
          renderDepartment(currentDepartment);
        } else {
          Alert.error(data.error || 'Department not found');
          setTimeout(() => window.location.href = '/admin/departments', 2000);
        }
      } catch (error) {
        Loader.hide();
        Alert.error('Failed to load department');
      }
    }

    function renderDepartment(dept) {
      const content = document.getElementById('departmentContent');
      const isDeleted = dept.isDeleted;

      const deletedBanner = isDeleted ? `
        <div style="background:#fff3cd; border:1px solid #ffc107; border-radius:8px; padding:12px 16px; margin-bottom:20px; display:flex; align-items:center; gap:10px; color:#856404;">
          <i class="fas fa-exclamation-triangle"></i>
          <span>This department was deleted on ${new Date(dept.deletedAt).toLocaleDateString('en-US', { year:'numeric', month:'long', day:'numeric' })}</span>
        </div>` : '';

      content.innerHTML = `
        ${deletedBanner}

        <!-- Profile Header -->
        <div class="profile-header">
          <div class="profile-content">
            <div class="profile-top">
              <div class="profile-main">

                <div class="profile-avatar-large" style="background: #eff6ff; color: #203f6a;">
                  <i class="fas ${dept.icon || 'fa-hospital'} avatar-icon"></i>
                </div>

                <div class="profile-info">
                  <div class="profile-name-row">
                    <h1>${dept.name}</h1>
                    ${isDeleted
                      ? '<span class="status-pill blocked"><i class="fas fa-ban"></i> Deleted</span>'
                      : '<span class="status-pill active"><i class="fas fa-circle status-dot"></i> Active</span>'
                    }
                  </div>
                  <div class="profile-meta">
                    <div class="meta-item">
                      <i class="fas fa-user-doctor"></i>
                      <span>Head: ${dept.departmentHead ? 'Dr. ' + dept.departmentHead.name : 'Not Assigned'}</span>
                    </div>
                    <div class="meta-item">
                      <i class="fas fa-users"></i>
                      <span>${dept.doctors ? dept.doctors.length : 0} Doctors</span>
                    </div>
                    <div class="meta-item">
                      <i class="fas fa-calendar"></i>
                      <span>Created ${new Date(dept.createdAt).toLocaleDateString('en-US', { year:'numeric', month:'short', day:'numeric' })}</span>
                    </div>
                  </div>
                </div>
              </div>

              <div class="profile-actions">
                ${!isDeleted ? `
                  <button class="btn-action btn-edit" onclick="showEditModal()">
                    <i class="fas fa-edit"></i> Edit
                  </button>
                  <button class="btn-action btn-delete" onclick="deleteDepartment()">
                    <i class="fas fa-trash"></i> Delete
                  </button>
                ` : `
                  <button class="btn-action btn-unblock" onclick="restoreDepartment()">
                    <i class="fas fa-undo"></i> Restore
                  </button>
                `}
              </div>
            </div>
          </div>

          <!-- Stats Bar -->
          <div class="profile-stats">
            <div class="stat-item">
              <span class="stat-value">${dept.doctors ? dept.doctors.length : 0}</span>
              <span class="stat-label">Total Doctors</span>
            </div>
            <div class="stat-item">
              <span class="stat-value">${dept.doctors ? dept.doctors.filter(d => d.status !== 'blocked').length : 0}</span>
              <span class="stat-label">Active Doctors</span>
            </div>
            <div class="stat-item">
              <span class="stat-value">${dept.departmentHead ? 'Dr. ' + dept.departmentHead.name.split(' ')[0] : 'None'}</span>
              <span class="stat-label">Department Head</span>
            </div>
            <div class="stat-item">
              <span class="stat-value">${new Date(dept.createdAt).getFullYear()}</span>
              <span class="stat-label">Est. Year</span>
            </div>
          </div>
        </div>

        <!-- Content Grid -->
        <div class="content-grid">
          <div class="info-card">
            <h3><i class="fas fa-info-circle"></i> Department Information</h3>
            <div class="info-row">
              <span class="info-label">Name</span>
              <span class="info-value">${dept.name}</span>
            </div>
            <div class="info-row">
              <span class="info-label">Description</span>
              <span class="info-value" style="line-height:1.6;">${dept.description}</span>
            </div>
            <div class="info-row">
              <span class="info-label">Icon</span>
              <span class="info-value"><i class="fas ${dept.icon || 'fa-hospital'}"></i> ${dept.icon || 'fa-hospital'}</span>
            </div>
            <div class="info-row">
              <span class="info-label">Status</span>
              <span class="info-value">
                ${isDeleted
                  ? '<span class="badge blocked">Deleted</span>'
                  : '<span class="badge active">Active</span>'
                }
              </span>
            </div>
            <div class="info-row">
              <span class="info-label">Department Head</span>
              <span class="info-value">${dept.departmentHead ? 'Dr. ' + dept.departmentHead.name : 'Not Assigned'}</span>
            </div>
          </div>

          <div class="info-card">
            <h3><i class="fas fa-chart-bar"></i> Statistics</h3>
            <div class="info-row">
              <span class="info-label">Total Doctors</span>
              <span class="info-value">${dept.doctors ? dept.doctors.length : 0}</span>
            </div>
            <div class="info-row">
              <span class="info-label">Active Doctors</span>
              <span class="info-value">${dept.doctors ? dept.doctors.filter(d => d.status !== 'blocked').length : 0}</span>
            </div>
            <div class="info-row">
              <span class="info-label">Created On</span>
              <span class="info-value">${new Date(dept.createdAt).toLocaleDateString('en-US', { year:'numeric', month:'long', day:'numeric' })}</span>
            </div>
            <div class="info-row">
              <span class="info-label">Last Updated</span>
              <span class="info-value">${new Date(dept.updatedAt).toLocaleDateString('en-US', { year:'numeric', month:'long', day:'numeric' })}</span>
            </div>
          </div>
        </div>

        <!-- Doctors Table -->
        <div class="info-card">
          <h3><i class="fas fa-user-doctor"></i> Doctors in ${dept.name} (${dept.doctors ? dept.doctors.length : 0})</h3>
          ${dept.doctors && dept.doctors.length > 0 ? `
            <table class="appointments-table">
              <thead>
                <tr>
                  <th>Name</th>
                  <th>Email</th>
                  <th>Phone</th>
                  <th>Specialization</th>
                  <th>Fee</th>
                  <th>Experience</th>
                  <th>Status</th>
                </tr>
              </thead>
              <tbody>
                ${dept.doctors.map(doctor => `
                  <tr style="cursor:pointer;" onclick="window.location.href='/admin/doctor/${doctor._id}'">
                    <td>Dr. ${doctor.name}</td>
                    <td>${doctor.email}</td>
                    <td>${doctor.phone || '-'}</td>
                    <td>${doctor.specialization}</td>
                    <td>${doctor.consultationFee ? 'â‚¹' + doctor.consultationFee : '-'}</td>
                    <td>${doctor.experience ? doctor.experience + ' yrs' : '-'}</td>
                    <td>
                      <span class="badge ${doctor.status === 'blocked' ? 'blocked' : doctor.status === 'inactive' ? 'inactive' : 'active'}">
                        ${(doctor.status || 'active').toUpperCase()}
                      </span>
                    </td>
                  </tr>
                `).join('')}
              </tbody>
            </table>
          ` : `
            <div class="empty-state">
              <i class="fas fa-user-doctor"></i>
              <p>No doctors assigned to this department</p>
            </div>
          `}
        </div>
      `;
    }

    function showEditModal() {
      if (!currentDepartment || currentDepartment.isDeleted) {
        Alert.error('Cannot edit a deleted department.');
        return;
      }

      document.getElementById('departmentId').value = currentDepartment._id;
      document.getElementById('editName').value = currentDepartment.name;
      document.getElementById('editDescription').value = currentDepartment.description;
      document.getElementById('editIcon').value = currentDepartment.icon || 'fa-hospital';

      const select = document.getElementById('editDepartmentHead');
      select.innerHTML = '<option value="">No Head Assigned</option>';
      if (currentDepartment.doctors && currentDepartment.doctors.length > 0) {
        currentDepartment.doctors.forEach(doctor => {
          const option = document.createElement('option');
          option.value = doctor._id;
          option.textContent = `Dr. ${doctor.name}`;
          if (currentDepartment.departmentHead && currentDepartment.departmentHead._id === doctor._id) {
            option.selected = true;
          }
          select.appendChild(option);
        });
      }

      document.getElementById('editModal').classList.add('show');
    }

    function closeEditModal() {
      document.getElementById('editModal').classList.remove('show');
      document.querySelectorAll('.error-message').forEach(el => el.textContent = '');
    }

    document.getElementById('editForm').addEventListener('submit', async function(e) {
      e.preventDefault();

      const formData = {
        name: document.getElementById('editName').value.trim(),
        description: document.getElementById('editDescription').value.trim(),
        icon: document.getElementById('editIcon').value.trim(),
        departmentHead: document.getElementById('editDepartmentHead').value || null
      };

      if (formData.name.length < 3) {
        document.getElementById('errorEditName').textContent = 'Name must be at least 3 characters';
        return;
      }
      if (formData.description.length < 10) {
        document.getElementById('errorEditDescription').textContent = 'Description must be at least 10 characters';
        return;
      }

      Loader.show('Updating department...');

      try {
        const response = await fetch(`/admin/api/departments/${departmentId}`, {
          method: 'PUT',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(formData)
        });

        const data = await response.json();
        Loader.hide();

        if (response.ok && data.success) {
          closeEditModal();
          Alert.success(data.message || 'Department updated successfully!');
          loadDepartment();
        } else {
          if (data.errors) {
            if (data.errors.name) document.getElementById('errorEditName').textContent = data.errors.name;
            if (data.errors.description) document.getElementById('errorEditDescription').textContent = data.errors.description;
          } else {
            Alert.error(data.error || 'Failed to update department');
          }
        }
      } catch (error) {
        Loader.hide();
        Alert.error('Error updating department');
      }
    });

    async function deleteDepartment() {
      const confirmed = await Swal.fire({
        title: 'Delete this department?',
        text: 'It can be restored later if needed.',
        icon: 'warning',
        showCancelButton: true,
        confirmButtonColor: '#ef4444',
        cancelButtonColor: '#64748b',
        confirmButtonText: 'Yes, Delete',
        cancelButtonText: 'Cancel'
      });

      if (!confirmed.isConfirmed) return;

      Loader.show('Deleting...');

      try {
        const response = await fetch(`/admin/api/departments/${departmentId}`, { method: 'DELETE' });
        const data = await response.json();
        Loader.hide();

        if (response.ok && data.success) {
          Alert.success(data.message);
          setTimeout(() => window.location.href = '/admin/departments', 1500);
        } else {
          Alert.error(data.error || 'Failed to delete department');
        }
      } catch (error) {
        Loader.hide();
        Alert.error('Error deleting department');
      }
    }

    async function restoreDepartment() {
      const confirmed = await Swal.fire({
        title: 'Restore this department?',
        text: 'It will become active again.',
        icon: 'question',
        showCancelButton: true,
        confirmButtonColor: '#22c55e',
        cancelButtonColor: '#64748b',
        confirmButtonText: 'Yes, Restore',
        cancelButtonText: 'Cancel'
      });

      if (!confirmed.isConfirmed) return;

      Loader.show('Restoring...');

      try {
        const response = await fetch(`/admin/api/departments/${departmentId}/restore`, { method: 'PATCH' });
        const data = await response.json();
        Loader.hide();

        if (response.ok && data.success) {
          Alert.success(data.message);
          loadDepartment();
        } else {
          Alert.error(data.error || 'Failed to restore department');
        }
      } catch (error) {
        Loader.hide();
        Alert.error('Error restoring department');
      }
    }

    document.addEventListener('DOMContentLoaded', loadDepartment);
  </script>
</body>
</html>
