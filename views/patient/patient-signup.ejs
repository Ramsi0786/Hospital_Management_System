<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Patient Signup - Healora</title>
  <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
  
  <link rel="stylesheet" href="/css/patient/signup.css">

</head>
<body>

  <section class="container-fluid px-0 signup-section">
    <div class="row g-0">

      <div class="col-md-6 signup-content">
        <form id="patientSignupForm" class="signup-form" novalidate>

          <h2>Patient Registration</h2>

          <div id="serverError" class="message"></div>
          <div id="successMessage" class="message success"></div>

          <input type="text" name="name" id="name" placeholder="Full Name" class="form-control mb-1">
          <div id="errorName" class="text-danger mb-2"></div>

          <input type="email" name="email" id="email" placeholder="Email" class="form-control mb-1">
          <div id="errorEmail" class="text-danger mb-2"></div>

          <input type="text" name="phone" id="phone" placeholder="Phone Number" class="form-control mb-1">
          <div id="errorPhone" class="text-danger mb-2"></div>

          <div class="position-relative mb-3">
          <input type="password" name="password" id="password" placeholder="Password" class="form-control">
          <i class="fa-solid fa-eye toggle-password" id="togglePassword"></i>
          <div id="errorPassword" class="text-danger mt-1"></div>
          </div>

      <div class="position-relative mb-4">
        <input type="password" name="confirmPassword" id="confirmPassword" placeholder="Confirm Password" class="form-control">
        <i class="fa-solid fa-eye toggle-password" id="toggleConfirmPassword"></i>
        <div id="errorConfirmPassword" class="text-danger mt-1"></div>
      </div>

          <button type="submit" class="btn btn-primary w-100">Register</button>

          <div class="separator">
          <span>OR</span>
          </div>

      <a href="/patient/auth/google?prompt=select_account" 
          style="display: flex; align-items: center; justify-content: center; 
          background-color: white; border: 1px solid #ccc; border-radius: 5px;
          text-decoration: none; color: #444; font-weight: 500; 
          padding: 10px; width: 100%; transition: 0.3s;">
          <img src="https://developers.google.com/identity/images/g-logo.png" 
         alt="Google logo" style="width: 20px; margin-right: 10px;">
         Continue with Google
      </a>
          <p class="text-center mt-3">
            Already have an account? <a href="/patient/login">Login</a>
          </p>
        </form>
      </div>

    </div>
  </section>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  
  <!-- Custom Form Validation -->
  <script src="/js/formValidation.js"></script>

  <script>
    // Handle form submission
    FormValidator.handleFormSubmit(
      'patientSignupForm',
      '/patient/signup',
      'signup',
      {
        onSuccess: (result) => {
          if (result.requiresOtp) {
            window.location.href = `/patient/verify-otp?email=${encodeURIComponent(result.email)}`;
          } else {
            document.getElementById('successMessage').textContent = result.message;
            document.getElementById('patientSignupForm').reset();
          }
        }
      }
    );

    // Setup password toggles
    FormValidator.setupPasswordToggle('password', 'togglePassword');
    FormValidator.setupPasswordToggle('confirmPassword', 'toggleConfirmPassword');
  </script>

</body>
</html>