<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link href="https://fonts.googleapis.com/css2?family=Jost:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
  
</head>
<body>
  <%- include('partials/navbar') %>

  <!-- Hero Section -->
  <section class="doctor-hero">
    <div class="container text-center">
      <h1>Search and connect with the right specialist for your needs</h1>
      <p>Choose doctors by location, expertise, or time</p>
    </div>
  </section>

  <!-- Search Box -->
  <section class="search-box-wrapper">
    <div class="container">
      <div class="search-box">
        <form action="/doctors" method="GET">
          <div class="row g-3 align-items-end">
            <div class="col-lg-5 col-md-6">
              <input 
                type="text" 
                name="search" 
                class="form-control" 
                placeholder="Doctor name or specialization" 
                value="<%= searchQuery %>">
            </div>

            <div class="col-lg-3 col-md-6">
              <select name="department" class="form-select">
                <option value="all" <%= selectedDepartment === 'all' ? 'selected' : '' %>>All Departments</option>
                <% departments.forEach(dept => { %>
                  <option value="<%= dept %>" <%= selectedDepartment === dept ? 'selected' : '' %>><%= dept %></option>
                <% }) %>
              </select>
            </div>

            <div class="col-lg-2 col-md-6">
              <button type="submit" class="btn btn-search w-100" style="color:#0F172A">
                <i class="fas fa-search me-2"></i>Search
              </button>
            </div>

            <% if (searchQuery || selectedDepartment !== 'all') { %>
              <div class="col-lg-2 col-md-6">
                <a href="/doctors" class="btn btn-clear w-100" style="color:#0F172A">
                  Clear All
                </a>
              </div>
            <% } %>
          </div>
        </form>
      </div>
    </div>
  </section>

  <!-- Doctors Grid -->
  <section class="doctor-grid">
    <div class="container">
      <% if (doctors && doctors.length > 0) { %>
        <!-- Results Info -->
        <div class="results-info">
          <div class="results-count">
            Showing <strong><%= doctors.length %></strong> <%= doctors.length === 1 ? 'doctor' : 'doctors' %>
          </div>
        </div>

        <!-- Grid -->
        <div class="row g-4">
          <% doctors.forEach(doctor => { %>
            <div class="col-xl-3 col-lg-4 col-md-6">
              <div class="doctor-card">
                <div class="doctor-initials">
                  <%= doctor.name.split(' ').map(n => n[0]).join('').toUpperCase().substring(0, 2) %>
                </div>

                <h5>Dr. <%= doctor.name %></h5>
                <div class="doctor-specialty"><%= doctor.specialization %></div>
                <div class="doctor-department"><%= doctor.department %> Department</div>

                <div class="doctor-info-row">
                  <div class="info-item">
                    <i class="fas fa-star"></i> <%= doctor.rating? doctor.rating : 4.8 %>
                  </div>
                  <div class="info-item">
                    <i class="fas fa-user"></i> 500+
                  </div>
                  <div class="info-item">
                    <i class="fas fa-clock"></i> <%= doctor.experience ? doctor.experience : 2 %> years
                  </div>
                </div>

                <div class="doctor-actions">
                  <a href="/doctors/<%= doctor._id %>" class="btn-profile">
                    View Profile
                  </a>
                  <a href="/patient/appointments?doctor=<%= doctor._id %>" class="btn-book">
                    Book
                  </a>
                </div>
              </div>
            </div>
          <% }) %>
        </div>
      <% } else { %>
        <!-- Empty State -->
        <div class="empty-results">
          <i class="fas fa-user-doctor"></i>
          <h4>No doctors found</h4>
          <p>Try adjusting your search filters</p>
          <a href="/doctors" class="btn btn-search" style="background :linear-gradient(135deg, #667eea, #203f6a);" >View All Doctors</a>
        </div>
      <% } %>
    </div>
  </section>

  <%- include('partials/footer') %>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>